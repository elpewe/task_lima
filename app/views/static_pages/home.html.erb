<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<%= render 'shared/user_info' %>
		</section>
		<section class="articles_form">
			<%= render 'shared/article_form' %>
		</section>
	</aside>
	<div class="col-md-8">
      <h3>Articles Feed</h3>
      <%= render 'shared/feed' %>
    </div>
</div>

<% else %>

<div class="center jumbotron">
	<h1>Welcome to the Sample App</h1>

	<h2> Signed up to post new article </h2>

	<%= link_to "Sign up now!", sign_up_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>